<div class="custom-hero-section" style="
  {% if section.settings.background_image %}
    background-image: url('{{ section.settings.background_image | img_url: '1920x' }}');
  {% endif %}
  {% if section.settings.image_height == 'small' %}
    min-height: 300px;
  {% elsif section.settings.image_height == 'medium' %}
    min-height: 500px;
  {% elsif section.settings.image_height == 'large' %}
    min-height: 700px;
  {% endif %}
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
">
  {% if section.settings.show_overlay %}
    <div class="hero-overlay" style="
      background-color: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    "></div>
  {% endif %}
  
  <div class="hero-content">
    {% if section.settings.heading != blank %}
      <h1 class="hero-heading">{{ section.settings.heading }}</h1>
    {% endif %}
    
    {% if section.settings.description != blank %}
      <div class="hero-description">
        <p>{{ section.settings.description | newline_to_br }}</p>
      </div>
    {% endif %}
    
    <div class="promotional-text">
      <p><strong>10% EXTRA ON 2 ITEMS<br>
        15% EXTRA ON 3 ITEMS<br>
        20% EXTRA ON 4+ ITEMS</strong><br><br>
        *Discounts are automatically applied at checkout.
      </p>
    </div>
  </div>
</div>

<style>
  .custom-hero-section {
    position: relative;
    width: 100%;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .hero-content {
    text-align: center;
    color: white;
    z-index: 2;
    padding: 2rem;
    position: relative;
  }
  
  .hero-heading {
    font-size: 3rem;
    font-weight: bold;
    margin: 0 0 1.5rem 0;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
  }
  
  .hero-description {
    margin-bottom: 2rem;
  }
  
  .hero-description p {
    font-size: 1.4rem;
    line-height: 1.5;
    margin: 0;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
  }
  
  .promotional-text {
    margin-top: 1rem;
  }
  
  .promotional-text p {
    font-size: 1.2rem;
    line-height: 1.6;
    margin: 0;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
  }
  
  .promotional-text strong {
    font-size: 1.3rem;
  }
  
  /* Mobile styles */
  @media screen and (max-width: 768px) {
    .custom-hero-section {
      {% if section.settings.mobile_background_image %}
        background-image: url('{{ section.settings.mobile_background_image | img_url: '768x' }}') !important;
      {% endif %}
      {% if section.settings.image_height == 'small' %}
        min-height: 200px;
      {% elsif section.settings.image_height == 'medium' %}
        min-height: 350px;
      {% elsif section.settings.image_height == 'large' %}
        min-height: 500px;
      {% endif %}
    }
    
    .hero-heading {
      font-size: 2rem;
      margin-bottom: 1rem;
    }
    
    .hero-description p {
      font-size: 1.1rem;
    }
    
    .promotional-text p {
      font-size: 1rem;
    }
    
    .promotional-text strong {
      font-size: 1.1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Hero Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "mobile_background_image",
      "label": "Background Image (Mobile)"
    },
    {
      "type": "select",
      "id": "image_height",
      "label": "Image Height",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description Text",
      "info": "This text will appear between the heading and the promotional offer"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show Background Overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 10,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Custom Hero"
    }
  ]
}
{% endschema %}
